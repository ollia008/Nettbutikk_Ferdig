@model Nettbutikk.Models.UploadProductModel

@{
    ViewData["Title"] = "Upload Product";
}

<h2>Upload Product</h2>

<form asp-action="UploadProduct" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Picture">Choose Image File</label>
        @{
            /* <input type="file" name="Picture" class="form-control" /> Dette er original koden, den bruker også Model, men det gjøres gjennom controller fordi controller populerer dataen. */

            /* Den under er hvis du vil sende data inn i model først, og så inn i controller :) */
        }
        @Html.EditorFor(UploadProductModel => UploadProductModel.picture, new {@htmlattributes = new {@class = "form-control"}})
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" min="0" name="pris" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
